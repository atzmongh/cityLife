
@using cityLife.Controllers;

@{
    Layout = "~/Views/sharing/_cityLifeLayout.cshtml";

    TranslateBox tBox = ViewBag.tBox;
    ViewBag.Title = tBox.translate("home");
    IEnumerable<ApartmentMainPhoto> apartments = ViewBag.apartments;
   



}

<div class="slider main-slider">

    @foreach (var apartmentPhoto in apartments)
    {
        <div>
            <div class="slide">
                <div class="image" style="background-image: url('@apartmentPhoto.photo.filePath');"></div>
                <div class="slide-dscr">
                    <div class="col">
                        <h4 class="light">Apartment @apartmentPhoto.apart.number</h4>
                        <h2 class="light">@apartmentPhoto.apart.addressKey</h2>
                        <div class="btn">Book now</div>
                    </div>
                    <div class="col">
                        <h4 class="light">Price</h4>
                        <div class="price light">$150/night</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="main-description-wrap">
    <div class="proverb">
        <p>To know the road ahead, ask those coming back.</p>
        <p class="align-right">— Chinese Proverb</p>
    </div>
    <div class="description main-description">
        <p>Our apartment house is in a sunny and quiet location with good connections to hiking paths and cross country skiing runs. There are 10 comfortable apartments from 25m<sup>2</sup> to 45m<sup>2</sup></p>
