@using cityLife4;
@using cityLife.Controllers;
@using System.Data.Entity;
@{
    //The view is used for both adding new orders an updating existing orders.
    //New orders have an order record which contains only checkin, checkout, number of nights and apartment number.
    //The order id of a new order is 0.
    //Existing orders contain all data belonging to that order
    ViewBag.Title = "s23addUpdateOrder";
    Order theOrder = ViewBag.order;
    TranslateBox tBox = ViewBag.tBox;
    BookingFormData theBookingFormData = ViewBag.bookingData;
    DbSet<Country> countries = ViewBag.countries;

}
<style>
    .inputBox {
        height: 60px;
        width: 100%;
        border: 1px solid #A3B6CC;
        position: relative;
        margin-bottom: 15px;
    }

    .inputElement {
        border: 0px;
        position: absolute;
        top: 30px;
        padding-left: 10px;
        padding-right: 10px;
        color: #011A36;
        text-align: left;
        width: 100%;
        font-family: 'lato-semibold', Arial, sans-serif;
        font-size: 16px;
    }

    .label {
        position: absolute;
        padding-left: 10px;
        color: #A3B6CC;
        font-family: 'lato-semibold', Arial, sans-serif;
        font-size: 16px;
    }

    .error-text {
        position: absolute;
        top: -16px;
        right: 0px;
        color: red;
        background: white;
    }

    .error {
        border-color: red;
    }
</style>


@Html.inputField(theBookingFormData.email, tBox, fieldType:"email")
@Html.inputField(theBookingFormData.name, tBox)



<div class="inputBox select-box @theBookingFormData.country.errorOrNot">
    <input list="countryList" name="country" id="country" value="@theBookingFormData.country.content" class="inputElement" />
    <datalist id="countryList">
        @foreach (var aCountry in countries)
        {
            <option value="@aCountry.name" />
        }
    </datalist>
    <label for="country" class="label">@tBox.translate("Country")</label>
    <span class="error-text" >@tBox.translate(theBookingFormData.country.errorMessage)</span>
</div>

@Html.inputField(theBookingFormData.phone, tBox, "phone")
@Html.inputField(theBookingFormData.arrivalTime, tBox)

<div class="inputBox @theBookingFormData.specialRequest.errorOrNot" style="height:120px;">
    <textarea id="specialRequest" name="specialRequest" class="inputElement" style="height:80px;">@theBookingFormData.specialRequest.content</textarea>
    <label for="specialReqest" class="label">@tBox.translate("Special Requests")</label>
    <span class="error-text">@theBookingFormData.specialRequest.errorMessage saf sdf sdf sdf </span>
</div>
<btn class="btn" onclick="activate('Booking')">@tBox.translate("Next")</btn>



