@using cityLife4;
@using cityLife.Controllers;
@{
    //The view is used for both adding new orders an updating existing orders.
    //New orders have an order record which contains only checkin, checkout, number of nights and apartment number.
    //The order id of a new order is 0.
    //Existing orders contain all data belonging to that order
    ViewBag.Title = "s23addUpdateOrder";
    Layout = "~/Views/sharing/_staffLayout.cshtml";
    Order theOrder = ViewBag.order;
    TranslateBox tBox = ViewBag.tBox;

}


<style>
   
   
</style>

<header>

    <ul class="wizard">
        <li id="liPersonal" class="activeWizard" onclick="activate('Personal')">@tBox.translate("Personal")</li>
        <li id="liBooking"  class="nonActiveWizard" onclick="activate('Booking')">@tBox.translate("Booking")</li>
        <li id="liOther"    class="nonActiveWizard" onclick="activate('Other')">@tBox.translate("Other")</li>
    </ul>
</header>
<form method="post" action="/staff/s25addUpdateOrder">
    <div id="divPersonal" style="max-width:500px;margin:10px;">
        @Html.Partial("s23A_orderPersonal")
    </div>
    <div id="divBooking" style="display:none">
        @Html.Partial("s23B_orderBooking")
    </div>
    <div id="divOther" style="display:none">
        @Html.Partial("s23C_orderOther")
    </div>
</form>

<script>
    function activate(screen) {
        $("#divPersonal").hide();
        $("#divBooking").hide();
        $("#divOther").hide();
        $("#div" + screen).show();

        $(".wizard li").removeClass("activeWizard").addClass("nonActiveWizard");
        $("#li" + screen).addClass("activeWizard");
    }
</script>










